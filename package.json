{
  "name": "chat",
  "private": true,
  "workspaces": [
    "web"
  ],
  "scripts": {
    "dev": "bun run dev:backend & bun run dev:frontend",
    "dev:backend": "air",
    "dev:frontend": "bun run --filter web dev",
    "dev:probe": "go run cmd/probe/main.go",
    "build": "bun run build:frontend",
    "build:backend": "go build -o ./tmp/main .",
    "build:frontend": "bun run --filter web build",
    "lint": "bun run --filter web lint",
    "test": "bun run --filter web test",
    "check": "bun run --filter web check"
  }
}